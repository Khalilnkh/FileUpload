@model ProductEditVM
@using P335_BackEnd.Entities

<h1>Edit product</h1>

<br />

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="1">Name</label>
            <input asp-for="Name" class="form-control" id="1">
        </div>
        <br />
        <div class="form-group col-md-2">
            <label for="2">Price</label>
            <input asp-for="Price" step="0.01" class="form-control" id="2">
        </div>
        <br />
    </div>
    <div class="form-row">
        <div class="form-group col-md-4">
            <label for="3">Category</label>
            <select asp-for="CategoryId" asp-items="@new SelectList(Model.Categories, nameof(Category.Id), nameof(Category.Name))" id="3" class="form-control">
                <option disabled selected>Choose category</option>
            </select>
        </div>
        <br />
        <div class="form-group col-md-4">
            <label for="4">Type</label>
            <select asp-for="ProductTypeId" asp-items="@new SelectList(Model.ProductTypes, nameof(ProductType.Id), nameof(ProductType.Name))" id="4" class="form-control">
                <option disabled selected>Choose type</option>
            </select>
        </div>
        <br />
        <div class="form-group col-md-4">
            <label for="5">Type</label>
            <input asp-for="Image" type="file" class="form-control img-input" id="5">
            <img src ="~/img/featured/@Model.ImageUrl" class="img-preview" />
            @if(Model.ImageUrl is not null)
            {
                <a class="delll btn btn-danger"> Delete Image</a>
            }
        </div>
        <br />
        <input hidden asp-for="Id" />
        <input hidden asp-for="ImageUrl" />
    </div>
    <div class="form-group">
    </div>
    <button type="submit" class="btn btn-primary">Edit</button>
</form>

@section Scripts{
    <script src="~/js/productUpdate.js"></script>
}